<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qurui.fund_manage_sys.dao.UserDao">
    <select id="checkUserLogin" parameterType="User" resultType="User">
        select *
        from user
        where user_name = #{user_name}
        and user_pwd = #{user_pwd}
    </select>
    <select id="getAllUsers" resultType="java.util.HashMap">
        select *
        from user_login
    </select>
    <insert id="addUser" parameterType="User">
        insert into user_login (user_name, user_pwd)
        values (#{user_name}, #{user_pwd})
    </insert>
    <select id="checkIfExists" parameterType="User" resultType="User">
        select *
        from user_login
        where user_name = #{user_name}
        and user_pwd = #{user_pwd}
    </select>
    <update id="changeUserPwd">
        update user_login
        set user_pwd = #{new_pwd}
        where user_name = #{user_name}
        and user_pwd = #{old_pwd}
    </update>
</mapper>